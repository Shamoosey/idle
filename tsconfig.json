{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "outDir": "./dist",
    "rootDir": "./scripts",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": false,
    "noEmitOnError": true,
    "lib": ["dom", "esnext"]
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["node_modules"]
}
